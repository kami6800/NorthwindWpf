<Application x:Class="Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop"
             xmlns:view="clr-namespace:Desktop.Views"
             xmlns:viewmodel="clr-namespace:Desktop.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:HRViewModel}">
            <view:HRView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:OrdersViewModel}">
            <view:OrdersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:AccountingViewModel}">
            <view:AccountingView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:CustomersViewModel}">
            <view:CustomersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:ProductsViewModel}">
            <view:ProductsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:SuppliersViewModel}">
            <view:SuppliersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:EmployeeInformationViewModel}">
            <view:EmployeeInformationView/>
        </DataTemplate>
    </Application.Resources>
</Application>
